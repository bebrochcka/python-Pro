personazh={'1':'Смелость','2':'Сила','3':'Ловкость','4':'Хитрость','5':'Крутость','6':'Нет'}
bebr=0
while(bebr!=1):
    a=input("Что чотите сделать? Я Могу показать характеристи персонажа,добавить характеристики,переделать существующее")
    if(a=="Характеристики"):
        print(personazh)
    if(a=="Добавить"):
        b=str(input("Под каким номером хотите добавить?"))
        sus=str(input("Что хотите добавить?"))
        personazh[b]=sus
    if(a=="Изменить"):
        bi=str(input("Под каким номером хотите изменить?"))
        sus1=str(input("Что хотите добавить?"))
        del personazh[bi]
        personazh[bi]=sus1
