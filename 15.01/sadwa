aboba=["меч","щит","пельмень","пельмень"]
berb=input("У вас в  инвентаре есть меч, щит и 2 пельменя. Что вы хотите взять?")
if(berb=="меч"):
    print("Вы взяли меч.")
    print("Вы можете напасть на монстра или выбросить оружие")
    bebr1=input("Что вы выберете?")
    if(bebr1="Напасть на монстра"):
        print("Вы нанесли 1хп")
        print("Монстр нанёс вам 100 хп и съел вас")
        print("Поражение")
    else:
        print("Вы были беззащитны. Из за этого вас съели")
        print("Поражение")
if(berb=="щит"):
    print("Вы взяли щит.")
    print("Вы можете защититься от монстра или выбросить оружие")
    bebr2=input("Что вы выберете?")
    if(bebr2="Защититься"):
        print("Монстр напал на вас но вы защитились.")
        print("Монстр понял что не сможет напасть на вас и ушёл")
        print("Победа")
    else:
        aboba.remove("")
        print("Вы были беззащитны. Из за этого вас съели")
        print("Поражение")
if(berb=="пельмень"):
    print("Вы взяли два пельменя")
    print("вы можете съесть 1 пельмень или 2 пельменя")
    bebr=input("Что вы выберете?")
    if(bebr=="съесть 1 пельмень"):
        print("Вы съели 1 пельмень.")
        aboba.remove("1 пельмень")
        print(aboba)
    else:
        print("Вы съели 2 пельмень")
        aboba.remove("1 пельмень")
        aboba.remove("2 пельмень")
        print(aboba)
