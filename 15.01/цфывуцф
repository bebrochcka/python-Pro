bg=1
gb=1
a=["Помыть полы","Покормить рыбок","Покормить кошку","Сделать домашнее задание","Вытащить курицы из морозилки"]
while(bg==gb):
    bebr=input("Что вы хотите сделать со списком?")
    if(bebr=="Удалить по индексу"):
        bebra=int(input("Какое дело по номеру удалить?"))
        a.pop(bebra)
    if(bebr=="Удалить по названию"):
        bebra1=str(input("Какое дело по названию удалить?"))
        a.remove(bebra1)
    if(bebr=="Показать весь список"):
        print(a)
    if(bebr=="Показать дело по номеру"):
        bebra2=int(input("Под каким номером показать дело?"))
        print(a[bebra2])
    if(bebr=="Добавить"):
        bebra3=str(input("Под каким названием добавить?"))
        a.append(bebra3)
    if(bebr=="Редактировать"):
        bebra4=int(input("Под каким номером редактировать?"))
        bebra5=str(input("На что заменить?"))
        a.pop(bebra4)
        a.append(bebra5)
    if(bebr=="Редактировать по имени"):
        bebra6=str(input("Под каким названием редактировать?"))
        bebra7=str(input("На что заменить?"))
        a.remove(bebra6)
        a.append(bebra7)
