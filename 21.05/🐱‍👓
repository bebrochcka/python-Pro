while(True):
    bebr=str(input("–ï—Å–ª–∏ –≤—ã –Ω–æ–≤—ã–π –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å —Ç–æ –∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä—É—é—Ç–µ—Å—å, –∞ –µ—Å–ª–∏ –Ω–µ—Ç —Ç–æ –∞–≤—Ç–æ—Ä–∏–∑–∏—Ä—É–π—Ç–µ—Å—å"))
    if(bebr=="–†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è"):
        bebra=str(input("–í–≤–µ–¥–∏—Ç–µ –ª–æ–≥–∏–Ω"))
        bebro=str(input("–í–≤–µ–¥–∏—Ç–µ –ø–∞—Ä–æ–ª—å"))
        f=open("file.txt",'a')
        f.write(bebra + '\n' + bebro)
        f.close()
    if(bebr=="–∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏—è"):
        bebra=str(input("–í–≤–µ–¥–∏—Ç–µ –ª–æ–≥–∏–Ω"))
        bebro=str(input("–í–≤–µ–¥–∏—Ç–µ –ø–∞—Ä–æ–ª—å"))
        f=open("file.txt",'r')
        a=f.read()
        a=a.split('\n')

        if(a[0]==bebra)and(a[1]==bebro):
            print("–í—ã –∞–≤—Ç–æ—Ä–∏–∑–æ–≤–∞–ª–∏—Å—å")
        f.close()
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
